    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ school.id }}</td>
            </tr>
            <tr>
                <th>BeginAt</th>
                <td>{{ school.beginAt ? school.beginAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ school.endAt ? school.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ school.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ school.content }}</td>
