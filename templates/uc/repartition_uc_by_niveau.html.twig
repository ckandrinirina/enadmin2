{% extends 'base.html.twig' %}

{% block title %}Répartitions des UE et EC
{% endblock %}

{% block insideHeader %}
    <section class="content-header">
        <h1>
            Répartitions des UE et EC
            <small>{{ parcour.type }}</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>Répartitions des UE et EC</a>
            </li>
            <li class="active">{{ parcour.type }}</li>
        </ol>
    </section>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    {% for niveau in niveaux %}
                        <li class="{% if niveau.id == n %}{{ 'active' }}{% endif %}">
                            <a href="{{ path('repartition_uc_by_niveau',{'type':parcour.id,'niveau':niveau.id}) }}">{{ niveau.nom }}</a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="box-header">
                    <h3 class="box-title col-md-4"></h3>
                    <a href="{{path('repartition_uc_by_niveau_pdf',{'type':parcour.id,'niveau':n})}}" class="pull-right btn  btn-social btn-flickr">
                        <i class="fa fa-file-pdf-o"></i>
                        Générer un PDF
                    </a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="nav-tabs-custom">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab_1">
                                            <div class="col-md-12">
                                                <div class="nav-tabs-custom">
                                                    <div class="tab-content">
                                                        <div class="tab-pane active" id="tab_1-1">
                                                            <div class="row">
                                                                <div class="col-xs-12">
                                                                    <div class="box" style="background-color: #fff;overflow-y:scroll;">
                                                                        {% for sem in semestre %}
                                                                            <div class="box-body col-lg-6 col-md-6 col-xs-12">
                                                                                <h3 class="text-muted text-center">{{ sem.semestre }}</h3>
                                                                                <table class="table table-bordered table-striped" id="example1">
                                                                                    {% for ue in sem.uEs %}
                                                                                        <thead class="col-sm-offset-8">
                                                                                            <tr>
                                                                                                <th>{{ue.nom}} </th>
                                                                                                <th>{{ue.credit}} crédits</th>
                                                                                            </tr>
                                                                                        </thead>
                                                                                        <tbody>
                                                                                            {% for ec in ue.ecs %}
                                                                                            {% if ec.isActive == 1 %}                                                        
                                                                                                <tr>
                                                                                                    <td>{{ ec.nom }}</td>
                                                                                                    <td>{{ ec.code }}</td>
                                                                                                    <td>{{ ec.credit }}
                                                                                                        crédits</td>
                                                                                                </tr>
                                                                                            {% endif %}
                                                                                            {% endfor %}
                                                                                        </tbody>
                                                                                    {% endfor %}
                                                                                </table>
                                                                            </div>
                                                                        {% endfor %}

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
{% endblock %}
