{% extends 'base.html.twig' %}

{% block title %}Liste des EC par enseignant{% endblock %}

{% block insideHeader %}
    <section class="content-header">
        <h1>
            Liste des EC par UC
            {#<small>{{ parcour.type }}</small>#}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Liste des EC par UC</a></li>
            {#<li class="active">{{ parcour.type }}</li>#}
        </ol>
    </section>
{% endblock %}

{% block body %}
<style>
    td, th {
    white-space: nowrap;
    overflow: hidden;
}
</style>
    <div class="row">
        {% for U in UC %}
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">{{ U.nom }}</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>EC</th>
                                {#<th>UC</th>#}
                            </tr>
                            {% set i=0 %}
                            {% for EC in U.eCs %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ EC.nom }}</td>
                                    {#<td>{{ EC.UC.nom }}</td>#}
                                </tr>
                                {% set i=i+1 %}
                            {% endfor %}
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        {% endfor %}
    </div>
{#    {% for U in UC %}
        <h1>{{ U.nom }}</h1>
        {% for EC in U.eCs %}
            {{ EC.nom }}
        {% endfor %}
    {% endfor %}#}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
{% endblock %}