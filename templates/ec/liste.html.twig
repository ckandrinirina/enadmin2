{% extends 'base.html.twig' %}

{% block title %}Liste des EC par enseignant{% endblock %}

{% block insideHeader %}
    <section class="content-header">
        <h1>
            Liste des EC par enseignant
            {#<small>{{ parcour.type }}</small>#}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Liste des EC par enseignant</a></li>
            {#<li class="active">{{ parcour.type }}</li>#}
        </ol>
    </section>
{% endblock %}

{% block body %}
    <div class="row">
        {% for enseignant in enseignants %}
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{{ enseignant.nom }}</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>EC</th>
                            <th>UC</th>
                        </tr>
                        {% set i=0 %}
                        {% for EC in enseignant.eCs %}
                        <tr>
                            <td>{{ i }}</td>
                            <td>{{ EC.nom }}</td>
                            <td>{{ EC.UC.nom }}</td>
                        </tr>
                            {% set i=i+1 %}
                        {% endfor %}
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        {% endfor %}
    </div>
