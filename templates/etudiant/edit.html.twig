{% extends 'base.html.twig' %}

{% block title %}Modifier profile
{% endblock %}

{% block insideHeader %}
    <section class="content-header">
        <h1>
            Modifier profile
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>Modifier profile</a>
            </li>
        </ol>
    </section>
{% endblock %}

{% block body %}
    <div class="col-md-8 col-md-offset-2">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Modifier profile</h3>
            </div>
            <img class="profile-user-img img-responsive" src="{{ asset(app.user.etudiant.photo) }}" alt="User profile picture">
            <!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form,{'attr':{'novalidate' : 'novalidate'}}) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_row(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.photo) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.pere) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.professionPere) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.mere) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.professionMere) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.contact) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.contact2) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.contact3) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.mail) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.date_naissance) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lieuxNaissance) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.anneEntre) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.sexe) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.parcour) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.anneUniversitaire) }}
                </div>
            </div>
            <div class="box-footer">
                <button class="btn btn-primary pull-right" type="submit">Valider</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
