{% extends 'base.html.twig' %}

{% block title %}Délibérations
    {{ parcour.type }}
{% endblock %}
{% block stylesheets %}
    <style>
        .color-palette {
            height: 35px;
            line-height: 35px;
            text-align: center;
        }

        .color-palette-set {
            margin-bottom: 15px;
        }

        .color-palette span {
            display: none;
            font-size: 12px;
        }

        .color-palette:hover span {
            display: block;
        }

        .color-palette-box h4 {
            position: absolute;
            top: 100%;
            left: 25px;
            margin-top: -40px;
            color: rgba(255, 255, 255, 0.8);
            font-size: 12px;
            display: block;
            z-index: 7;
        }
    </style>
{% endblock %}

{% block insideHeader %}
    <section class="content-header">
        <h1>
            Délibérations
            <small>{{ parcour.type }}</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>Délibérations</a>
            </li>
            <li class="active">{{ parcour.type }}</li>
        </ol>
    </section>
{% endblock %}

{% block body %}
    <div class="row">
        <div
            class="col-md-12">
            <!-- Custom Tabs -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    {% for niveau in niveaux %}
                        <li class="{% if niveau.id == n %}{{ 'active' }}{% endif %}">
                            <a href="{{ path('list',{'type':parcour.id,'niveaux':niveau.id}) }}">{{ niveau.nom }}</a>
                        </li>
                    {% endfor %}
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="box">
                                    <div class="box-header">
                                        <h3 class="box-title col-md-4">Liste des étudiants</h3>
                                    </div>
                                    <!-- /.box-header -->
                                    <div class="box-body">
                                        <table class="table table-bordered table-striped" id="example1">
                                            <thead>
                                                <tr>
                                                    <th>Nom et Prénom(s)</th>
                                                    <th>Détails</th>
                                                    <th>Moyenne S1</th>
                                                    <th>Moyenne S2</th>
                                                    <th>Admis en</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for etudiant in etudiants %}
                                                    <tr>
                                                        <td>{{ etudiant.nom }} {{ etudiant.prenom }}</td>
                                                        <td><button href="javascript:void(0);" onclick="javascipt:window.open('{{ path('fiche_note',{'etudiant':etudiant.id,'niveaux':etudiant.niveaux.id,'semestre':etudiant.niveaux.semestres['0'].id,'au':etudiant.anneUniversitaire.id,'ratrapage':'0'}) }}')" type="button" class="btn btn-block btn-info btn-sm">Détail</button></td>
                                                        <td>{{ moyenne_impaire[etudiant.id] }}</td>
                                                        <td>{{ moyenne_paire[etudiant.id] }}</td>
                                                        <td>
                                                            {{ form_start(view_form[etudiant.id],{'action': path('admis',{'id':etudiant.id}), 'method': 'POST'}) }}
                                                            <div class="input-group input-group-sm">
                                                                {{ form_row(view_form[etudiant.id].niveaux) }}
                                                                <span class="input-group-btn">
                                                                    <button class="btn btn-info btn-flat" type="submit">Valider</button>
                                                                </span>
                                                            </div>
                                                            {{ form_end(view_form[etudiant.id]) }}
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('dist/js/adminlte.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('bower_components/jquery-slimscroll/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('bower_components/fastclick/lib/fastclick.js') }}"></script>
    <script src="{{ asset('bower_components/fastclick/lib/fastclick.js') }}"></script>
