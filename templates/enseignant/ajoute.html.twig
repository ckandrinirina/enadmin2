{% extends 'base.html.twig' %}

{% block title %}{% if type == 'add' %}Ajouter un enseignant{% else %}Modifier profile {% endif %}
{% endblock %}

{% block insideHeader %}
    <section class="content-header">
        <h1>
            {% if type == 'add' %}Ajouter un enseignant{% else %}Modifier profile {% endif %}
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>{% if type == 'add' %}Ajouter un enseignant{% else %}Modifier profile {% endif %}</a>
            </li>
        </ol>
    </section>
{% endblock %}

{% block body %}
<style>
    td, th {
    white-space: nowrap;
    overflow: hidden;
}
</style>
    <div class="col-md-8 col-md-offset-2">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{% if type == 'add' %}Ajouter un enseignant{% else %}Modifier profile {% endif %}</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form,{'attr':{'novalidate' : 'novalidate'}}) }}
            <div class="box-body">
                <div class="form-group">
                    {{ form_row(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.matricule) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.photo) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.contact) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.contact2) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.contact3) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.mail) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.dateNaissance) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lieuxNaissance) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.adresse) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.type) }}
                </div>
            </div>
            <div class="box-footer">
                <button class="btn btn-primary pull-right" type="submit">Valider</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
